<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#FFFFFF" /> <!-- or any color like @color/white -->

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Optional: border -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />

    <!-- Optional: shadow-like effect for old APIs -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
